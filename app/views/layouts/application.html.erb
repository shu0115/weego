<!DOCTYPE html>
<html>
<head>
  <title><%= APP_NAME %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if false %>
<%# ----- 追加 ----- %>
<% if current_user %>
  <%# ログイン済み %>
  <%= current_user.name %> : 
   <%= link_to "Event" , controller: "events", action: "new" %>
   | <%= link_to "List" , controller: "events", action: "index" %>
  <% if false %> | <%= link_to "Entry" , controller: "entry", action: "new" %><% end %>
   || <%= link_to "Logout" , logout_path %>
<% else %>
  <%# 未ログイン %>
  <%= link_to "Login", "/auth/#{DEFAULT_PROVIDER}" %>
<% end %>

<%# 通知／エラーメッセージ %>
<%= simple_format( flash[:notice], style: "color: green;" ) unless flash[:notice].blank? %>
<%= simple_format( flash[:alert], style: "color: red;" ) unless flash[:alert].blank? %>
<%# ----- ／追加 ----- %>
<% end %>

<%= yield %>

</body>
</html>
